<html>
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<title>Página Inicial</title>
		<link href='default_style.css' rel='stylesheet' type='text/css'>
		<style type="text/css">
		.login_frame {
			width: 300px;
			margin: 100px auto;
			border-radius: 6px;
			padding: 20px 30px 30px 30px;
			background-color: rgba(255,255,255,0.5);
		}
		</style>
		<script src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'></script>
		<script type="text/javascript">
			function validateFields() {
				if (!document.loginForm.login.value) {
					alert("O Campo Login é obrigatorio!");
					return false;
				} else if (!document.loginForm.password.value){
					alert("Senha é obrigatoria!");
					return false;		
				}
				
				document.loginForm.submit();
			}
		</script>
	</head>
	 
	<body>
		<%= include static/page_header.html %>
		<div class="login_frame">
			<form id="loginForm" name="loginForm" method="post" action="doLogin">
				<table>
					<tr><td align="right">Login:</td><td><input type="text" name="login" id="login" size="25" maxlength="30"/></td></tr>
				    <tr><td align="right">Senha:</td><td><input type="password" name="password" id="password" size="25" maxlength="30" /></td></tr>
				    <tr><td /><td><input type="button" id="button_login" value="Entrar" onclick="validateFields()"/></td></tr>
				</table>
			</form>
			<div style="float:left">
				<a style="font-size: 12px;" href="signup">Cadastrar Usuário</a>
			</div>
			<div style="float:right">
				<a style="font-size: 12px;" href="forgotpassword">Esqueci minha senha</a>
			</div>  
		</div>
		<%= include static/page_footer.html %>
	</body>
</html>